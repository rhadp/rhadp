apiVersion: machine.openshift.io/v1beta1
kind: MachineSet
metadata:
  annotations:
    capacity.cluster-autoscaler.kubernetes.io/labels: kubernetes.io/arch=arm64
    machine.openshift.io/GPU: '{{ aws_metal_gpu }}'
    machine.openshift.io/memoryMb: '{{ aws_metal_memory }}'
    machine.openshift.io/vCPU: '{{ aws_metal_vcpu }}'
  name: {{ cluster_label }}-metal-{{ aws_default_region }}{{ aws_metal_availability_zone }}
  namespace: openshift-machine-api
  labels:
    machine.openshift.io/cluster-api-cluster: {{ cluster_label }}
    machine.openshift.io/cluster-api-machineset: {{ cluster_label }}-metal-{{ aws_default_region }}{{ aws_metal_availability_zone }}
    machine.openshift.io/cluster-api-machine-role: worker
    machine.openshift.io/cluster-api-machine-type: metal
spec:
  replicas: {{ aws_metal_instance_count }}
  selector:
    matchLabels:
      machine.openshift.io/cluster-api-cluster: {{ cluster_label }}
      machine.openshift.io/cluster-api-machineset: {{ cluster_label }}-metal-{{ aws_default_region }}{{ aws_metal_availability_zone }}
  template:
    metadata:
      labels:
        machine.openshift.io/cluster-api-cluster: {{ cluster_label }}
        machine.openshift.io/cluster-api-machineset: {{ cluster_label }}-metal-{{ aws_default_region }}{{ aws_metal_availability_zone }}
        machine.openshift.io/cluster-api-machine-role: worker
        machine.openshift.io/cluster-api-machine-type: metal
    spec:
      lifecycleHooks: {}
      metadata:
        labels:
          {{ platform_prefix }}.node-role/builder: 'true'
          {{ platform_prefix }}.node-role/virt: 'true'
      providerSpec:
        value:
          userDataSecret:
            name: worker-user-data
          placement:
            availabilityZone: {{ aws_default_region }}{{ aws_metal_availability_zone }}
            region: {{ aws_default_region }}
          credentialsSecret:
            name: aws-cloud-credentials
          capacityReservationId: ''
          instanceType: {{ aws_metal_instance_type }}
          metadata:
            creationTimestamp: null
          blockDevices:
            - ebs:
                encrypted: true
                iops: 0
                kmsKey:
                  arn: ''
                volumeSize: {{ aws_metal_volume_size }}
                volumeType: {{ aws_metal_volume_type }}
          securityGroups:
            - filters:
                - name: 'tag:Name'
                  values:
                    - {{ cluster_label }}-node
            - filters:
                - name: 'tag:Name'
                  values:
                    - {{ cluster_label }}-lb
          kind: AWSMachineProviderConfig
          metadataServiceOptions: {}
          tags:
            - name: kubernetes.io/cluster/{{ cluster_label }}
              value: owned
          deviceIndex: 0
          ami:
            id: {{ aws_metal_ami_id }}
          subnet:
            filters:
              - name: 'tag:Name'
                values:
                  - {{ cluster_label }}-subnet-private-{{ aws_default_region }}{{ aws_metal_availability_zone }}
          apiVersion: machine.openshift.io/v1beta1
          iamInstanceProfile:
            id: {{ cluster_label }}-worker-profile
      #taints:
      #  - effect: NoSchedule
      #    key: architecture
      #    value: arm