apiVersion: org.eclipse.che/v2
kind: CheCluster
metadata:
  name: {{ devspaces_instance_name }}
  namespace: {{ platform_devspaces_namespace }}
  finalizers:
    - checluster.che.eclipse.org
    - cluster-resources.finalizers.che.eclipse.org
    - cheGateway.clusterpermissions.finalizers.che.eclipse.org
    - oauthclients.finalizers.che.eclipse.org
    - dashboard.clusterpermissions.finalizers.che.eclipse.org
spec:
  components:
    cheServer:
      debug: false
      logLevel: INFO
      extraProperties:
        CHE_FORCE_REFRESH_PERSONAL_ACCESS_TOKEN: "true"

    dashboard:
      logLevel: INFO
      #headerMessage:
      #  show: true
      #  text: {{ devspaces_instance_description }}
    
    devWorkspace: {}
    
    devfileRegistry: {}
    imagePuller:
      enable: false
      spec: {}
    metrics:
      enable: true
    pluginRegistry: {}
    
  containerRegistry: {}
  
  devEnvironments:
    workspacesPodAnnotations:
      io.kubernetes.cri-o.Devices: /dev/fuse
    
    startTimeoutSeconds: 300
    secondsOfInactivityBeforeIdling: 1800
    
    security: {}
    secondsOfRunBeforeIdling: -1
    disableContainerBuildCapabilities: false
    containerBuildConfiguration:
      openShiftSecurityContextConstraint: container-build
    
    ignoredUnrecoverableEvents:
      - FailedScheduling
    
    maxNumberOfWorkspacesPerUser: {{ devspaces_instance_workspaces_per_user }}
    maxNumberOfRunningWorkspacesPerUser: {{ devspaces_instance_running_workspaces_per_user }}
    maxNumberOfRunningWorkspacesPerCluster: -1

    #allowedSources:
    #  urls:
    #    - 'https://github.com/*'
    
    imagePullPolicy: Always
    deploymentStrategy: Recreate
    
    #defaultComponents:
    #  - container:
    #      sourceMapping: /projects
    #      image: {{ devspaces_instance_default_container_image }}
    #      cpuRequest: "{{ devspaces_instance_cpu_requested }}"
    #      memoryRequest: "{{ devspaces_instance_memory_requested }}"
    #      cpuLimit: "{{ devspaces_instance_cpu_limit }}"
    #      memoryLimit: "{{ devspaces_instance_memory_limit }}"
    #    name: universal-developer-image
    
    defaultNamespace:
      autoProvision: true
      template: "{{ rhadp_prefix }}-ds-<username>"
    
    storage:
      perUserStrategyPvcConfig:
        claimSize: 5Gi
      pvcStrategy: per-user
  
  gitServices:
    github:
      - secretName: "github-oauth-config"
  
  networking:
    auth:
      advancedAuthorization:
        allowGroups:
          - "{{ platform_admin_group }}"
          - "{{ platform_user_group }}"
      gateway:
        configLabels:
          app: che
          component: che-gateway-config
          