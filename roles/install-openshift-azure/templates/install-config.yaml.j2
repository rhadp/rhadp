additionalTrustBundlePolicy: Proxyonly
apiVersion: v1
baseDomain: {{ cluster_domain }}
compute:
- architecture: {{ secondary_architecture }}
  hyperthreading: Enabled
  name: worker
  platform:
    azure:
      type: {{ azure_secondary_instance_type }}
      osDisk:
        diskType: {{ azure_secondary_volume_type }}
  replicas: {{ secondary_instance_count }}
controlPlane:
  architecture: {{ primary_architecture }}
  hyperthreading: Enabled
  name: master
  platform:
    azure:
      type: {{ azure_primary_instance_type }}
      osDisk:
        diskType: {{ azure_primary_volume_type }}
  replicas: {{ primary_instance_count }}
metadata:
  name: {{ cluster_name }}
networking:
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineNetwork:
  - cidr: 10.0.0.0/16
  networkType: OVNKubernetes
  serviceNetwork:
  - 172.30.0.0/16
platform:
  azure:
    baseDomainResourceGroupName: {{ azure_resource_group }}
    cloudName: AzurePublicCloud
    outboundType: Loadbalancer
    region: {{ azure_location }}
publish: External
pullSecret: '{{ cluster_pull_secret['content'] | b64decode }}'
sshKey: |
  {{ cluster_ssh_pub_key['content'] | b64decode }}
